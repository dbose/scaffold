<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <% unless render_for_upload %>
      <link href="/styles.css" rel="stylesheet">
      <h1 class="template-header"><a href="https://mandrillapp.com/templates/code?id=<%= slug %>"><%= slug %></a></h1>
    <% end %>
    <style>
      <%= erb(:'styles/styles', :layout => false) %>
    </style>
  </head>
  <body class="template-body">
    <div id="wrapper">
      <div id="top"></div>
      <%= erb(:'partials/header', :layout => false) %>
      <div style="clear: both;"></div>
      <div id="contentliquid">
        <div id="body-content">
          <div id="Slide" align="center">
            <%= erb("templates/#{slug}/header".to_sym, :layout => false) %>
          </div>
          <div id="content">
            <%= erb("templates/#{slug}/template".to_sym, :layout => false) %>
          </div>
        </div>
        <%= erb(:'partials/footer', :layout => false) %>
      </div>
    </div>
  </body>
</html>



